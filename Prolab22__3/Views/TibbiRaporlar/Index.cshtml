@model IEnumerable<Prolab22__3.Models.TibbiRapor>

@{
    ViewData["Title"] = "Tıbbi Raporlar Listesi";
}

<h1>Tıbbi Raporlar Listesi</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Rapor ID</th>
            <th>Hasta ID</th>
            <th>Doktor ID</th>
            <th>Rapor Tarihi</th>
            <th>Rapor İçeriği</th>
            <th>URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rapor in Model)
        {
            <tr>
                <td>@rapor.RaporID</td>
                <td>@rapor.HastaID</td>
                <td>@rapor.DoktorID</td>
                <td>@rapor.RaporTarihi.ToShortDateString()</td>
                <td>@rapor.RaporIcerigi</td>
                <td><a href="@rapor.URL" target="_blank">Rapor Linki</a></td>
                <td>
                    <a href="@Url.Action("Details", "TibbiRaporlar", new { id = rapor.RaporID })" class="btn btn-info">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "TibbiRaporlar")" class="btn btn-primary">Yeni Rapor Ekle</a>
